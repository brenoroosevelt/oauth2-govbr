{
  "name": "brenoroosevelt/oauth2-govbr",
  "description": "Gov.Br OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
  "keywords": [
    "oauth",
    "oauth2",
    "client",
    "authorization",
    "govbr",
    "sso",
    "idp",
    "governo brasil",
    "single sign on"
  ],
  "homepage": "http://github.com/brenoroosevelt/oauth2-govbr",
  "license": "MIT",
  "authors": [
    {
      "name": "Breno Roosevelt",
      "email": "breno.roosevelt@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1 || ^8",
    "league/oauth2-client": "^2"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.90",
    "phpunit/phpunit": "^6.5 || ^9.0",
    "squizlabs/php_codesniffer": "3.5.*",
    "middlewares/utils": "^2"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "BrenoRoosevelt\\OAuth2\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BrenoRoosevelt\\OAuth2\\Client\\Test\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t web",
    "test": "phpunit",
    "check": [
      "phpunit",
      "phpstan",
      "phpcs -p src tests"
    ]
  }
}
